<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewer_options_menu"
    android:layout_height="wrap_content"
    android:layout_width="400dp"
    android:background="@drawable/border_background"
    android:padding="1dp"
    android:visibility="invisible"
    android:layout_gravity="end|top"
    android:elevation="2dp"
    android:orientation="vertical">

    <ToggleButton
        android:id="@+id/direction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textOff="@string/left_to_right"
        android:textOn="@string/right_to_left"
        android:textAlignment="textStart"
        android:background="@android:color/white"
        android:drawableStart="@drawable/direction_option_image"
        android:drawablePadding="20dp"
        android:textSize="20sp"/>

    <ToggleButton
        android:id="@+id/orientation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textOff="@string/two_page"
        android:textOn="@string/one_page"
        android:textAlignment="textStart"
        android:background="@drawable/border_top_dotted"
        android:drawableStart="@drawable/page_option_image"
        android:drawablePadding="20dp"
        android:textSize="20sp"/>

</LinearLayout>